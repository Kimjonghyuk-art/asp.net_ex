@model ASP.NETMVC_test.Models.UserViewModel

<h2>User List</h2>

<table>
    <thead>
        <tr>
            <th>No.</th>
            <th>User Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Users.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.Users[i].UserName</td>
                <td>@Model.Users[i].Email</td>
            </tr>
        }
    </tbody>
</table>
