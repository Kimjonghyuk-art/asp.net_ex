<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centered Toast Example</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <h1>Centered Toast with Confirm/Cancel</h1>

    <!-- Link that triggers the toast -->
    <a href="#" id="showToast">Click me to show toast</a>

    <!-- Toast Container -->
    <div aria-live="polite" aria-atomic="true" class="position-fixed top-50 start-50 translate-middle" style="z-index: 1020;">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
            <div class="toast-header">
                <strong class="me-auto">Confirmation</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                Are you sure you want to proceed?
                <div class="mt-3 d-flex justify-content-end">
                    <button id="confirmButton" type="button" class="btn btn-success me-2">Confirm</button>
                    <button id="cancelButton" type="button" class="btn btn-danger">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>    document.addEventListener('DOMContentLoaded', function () {
            var toastElement = document.getElementById('liveToast');
            var toast = new bootstrap.Toast(toastElement, {
                autohide: false
            });

            // Show toast on clicking the link
            document.getElementById('showToast').addEventListener('click', function (e) {
                e.preventDefault(); // Prevent the default anchor behavior
                toast.show();
            });

            // Handle confirm button click
            document.getElementById('confirmButton').addEventListener('click', function () {
                alert('Confirmed!');
                toast.hide(); // Hide the toast
            });

            // Handle cancel button click
            document.getElementById('cancelButton').addEventListener('click', function () {
                alert('Cancelled!');
                toast.hide(); // Hide the toast
            });
        });</script>

</body>
</html>
