@model ASP.NETMVC_test.Models.UserViewModel
@{ ViewData["Title"] = "勤怠一覧"; }


<h1>勤怠一覧</h1>

<form>
    <div class="form-group">
        <label class="control-label">技術者名</label>
        <input class="form-inline form-control control-textbox" autocomplete="on" />
    </div>
    <div class="form-group">
        <label class="control-label">年</label>
        ／
        <label class="control-label">月</label>
    </div>
    <div class="form-group">
        <div class="form-inline licenseallowance-yearandmonth">
            <select class="form-control">
                <option value="2022">2022</option>
                <option value="2023">2023</option>
                <option value="2024">2024</option>
            </select>
            ／
            <select class="form-control">
                <option value=""></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary waves-effect waves-light" formaction="/shanaikanri/.../..">検索</button>
    </div>
    <div class="form-group">
        <label>件数　: 0</label>
        <label>件</label>
       @* <label>2024念はアンロック中です。</label>*@
    </div>

    <table class="table table-bordered table-striped table-hover text-nowrap">
        <thead>
            <tr>
                <th> </th>
                <th>技術者名</th>
                <th>年</th>
                <th>月</th>
                <th>稼働時間</th>
                <th>メモ</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>編集</td>
                <td>jonghyuk</td>
                <td>2024</td>
                <td>3</td>
                <td>160:00</td>
                <td></td>
                <td>削除</td>
            </tr>
        </tbody>

    </table>

</form>


@* javascript *@
@section Scripts {
    <!--Enterキーでのsubmit禁止-->
    <script type="text/javascript" src="~/js/common/site-disable-submit-on-enter.js"></script>
    <!--Buttonを読込用のstyleに変更-->
    <script type="text/javascript" src="~/js/common/site-change-loding-style-disabled.js"></script>
    <!--メッセージダイアログ表示-->
    <script type="text/javascript" src="~/js/common/site-display-message.js"></script>
    <!--オブジェクトを入力可能/読取専用に切り替える-->
    <script type="text/javascript" src="~/js/common/site-edit-setting-switching.js"></script>
    <!--画面固有JavaScript-->
    <script type="text/javascript" src="~/js/individual/LicenseAllowance.js"></script>
    <script type="text/javascript">


    $(document).ready(function () {
            



    })
</script>
        
}

